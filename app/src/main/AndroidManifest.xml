<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Declarar el permiso para indicar la intención de usar la API "App usage statistics" -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!--Permiso para segundo plano-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/> <!--Permiso para notificaciones-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" /> <!--Permiso especifico para dataSync-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!--Permiso para sobreponer en otras apps-->
    <!--
 tools:ignore se usa para suprimir la advertencia del Lint sobre permisos protegidos.
         PACKAGE_USAGE_STATS es un permiso de nivel de sistema que no se otorga automáticamente;
         el usuario debe habilitarlo manualmente desde los ajustes del dispositivo
    -->
    <!-- Para poder listar todas las aplicaciones que el usuario puede abrir desde el launcher -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pebble_app">


        <!--Servicio que permite ejecutar la app en segundo plano -->
        <service
            android:name=".ForegroundAppService"
            android:foregroundServiceType="dataSync"
            android:exported="false" />

        <activity
            android:name=".BlockedAppActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>