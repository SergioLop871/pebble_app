<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlack"
    tools:context=".ScreenTimeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Tiempo en Pantalla"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine2"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLine2"
            app:layout_constraintStart_toStartOf="@+id/verticalGuideLine1"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideLine1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/schemeSelectorContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bgWidgetBlack"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine4"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLine2"
            app:layout_constraintStart_toStartOf="@+id/verticalGuideLine1"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideLine3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/schemeSelectorLeftArrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/outline_keyboard_arrow_left_24" />

                <TextView
                    android:id="@+id/schemeSelectorToday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Hoy"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schemeSelectorWeek"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Semanalmente"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schemeSelectorMonth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Mensualmente"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schemeSelectorYear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Anualmente"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/schemeSelectorRightArrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/outline_keyboard_arrow_right_24" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contenedor del selector del dia, mes, aÃ±o -->
        <androidx.cardview.widget.CardView
            android:id="@+id/schemeDateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bgBlack"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine6"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLine2"
            app:layout_constraintStart_toStartOf="@+id/verticalGuideLine1"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideLine5">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mar, 23 Sep"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <!-- Contenedor redondo del grÃ¡fico -->

        <androidx.cardview.widget.CardView
            android:id="@+id/chartContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/bgWidgetBlack"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine8"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLine2"
            app:layout_constraintStart_toStartOf="@+id/verticalGuideLine1"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideLine7">

            <!-- El grÃ¡fico dentro del contenedor -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp" />

        </androidx.cardview.widget.CardView>

        <!--CONTENEDOR-->

        <!--CONTENEDOR-->

        <androidx.cardview.widget.CardView
