                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/infoFocusScoreLabel" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/infoQueriesContainer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:cardBackgroundColor="@color/screenTimeInfoBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="1"
                            app:layout_constraintWidth_percent="0.47"
                            app:cardCornerRadius="15dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/infoFocusQueriesLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginEnd="51dp"
                                    android:autoSizeMaxTextSize="80sp"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="Consultas"
                                    android:textColor="@color/screenTimeInfoText"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/infoFocusQueriesText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginEnd="51dp"
                                    android:layout_marginBottom="34dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="18sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="50"
                                    android:textColor="@color/screenTimeInfoText"
                                    android:textSize="30sp"

                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/infoFocusQueriesLabel" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardElevation="0dp"
                    app:layout_constraintWidth_percent="1"
                    app:layout_constraintHeight_percent="0.48"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardBackgroundColor="@android:color/transparent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/infoScreenTimeContainer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:cardBackgroundColor="@color/screenTimeInfoBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHeight_percent="1"
                            app:layout_constraintWidth_percent="0.47"
                            app:cardCornerRadius="15dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/infoScreenTimeLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="51dp"
                                    android:autoSizeMaxTextSize="80sp"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="Tiempo en\n Pantalla"
                                    android:textColor="@color/screenTimeInfoText"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/infoScreenTimeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginEnd="51dp"
                                    android:layout_marginBottom="34dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="18sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="4h 15m"
                                    android:textColor="@color/screenTimeInfoText"

                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/infoScreenTimeLabel" />


                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/infoStreakContainer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:cardBackgroundColor="@color/screenTimeInfoBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_percent="1"
                            app:layout_constraintWidth_percent="0.47"
                            app:cardCornerRadius="15dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/infoStreakLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="51dp"
                                    android:autoSizeMaxTextSize="80sp"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="Mejor Racha\n Global"
                                    android:textColor="@color/screenTimeInfoText"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/infoStreakText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="51dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginEnd="51dp"
                                    android:layout_marginBottom="34dp"
                                    android:autoSizeMaxTextSize="100sp"
                                    android:autoSizeMinTextSize="18sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center"
                                    android:text="ðŸ”¥22"
                                    android:textColor="@color/screenTimeInfoText"

                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/infoStreakLabel" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!--Hasta aqui-->

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.060" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
