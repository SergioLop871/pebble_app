<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CreateFocusSessionFragment"
    android:background="@color/bgBlack">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Titulo y boton para regresar hacia atras -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/horizontalGuideLine2"
            app:layout_constraintStart_toStartOf="@+id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@+id/horizontalGuideLine1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <ImageButton
                    android:id="@+id/goBackButton"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/outline_keyboard_arrow_left_24"
                    app:tint="@color/white"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="start|center"
                android:text="Crear Sesión de Enfoque"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--Descripción de la creación de sesión de enfoque -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="El modo enfoque te permite crear un\
bloqueo de aplicaciones de manera rutinaria."
            android:gravity="center"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="16sp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine3"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine4"/>

        <!--Campo para escribir el nombre de la sesión de enfoque -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/focusCustomInputBg"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine5"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine6">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/focusSessionNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:maxLength="50"
                    android:ems="10"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:hint="Nombre de enfoque"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/focusCustomInputHintColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/pibbleLogoWater"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Campo para escribir la descripción de la sesión de enfoque -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/focusCustomInputBg"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine7"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/focusSessionDescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:hint="Descripción (Máx. 200 caracteres)"
                    android:textColor="@color/white"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/focusCustomInputHintColor"
                    android:scrollbars="vertical"
                    android:overScrollMode="ifContentScrolls"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/pibbleLogoWater"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    <!--Sección para el icono de la sesión de enfoque (emoticon) -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@id/verticalGuideLine3"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine9"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine10"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Emoticono"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:gravity="center"/>


                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="text"
                    android:text="⚡"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@android:color/transparent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Sección para el ajuste de horas -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="263dp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine4"
            app:layout_constraintEnd_toStartOf="@+id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine9"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine10"

            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Horas"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/focusCustomInputBg">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 PM - 6 AM"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Sección para el ajuste de dias -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine11"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Días de la semana"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/focusCustomInputBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <Button
                            android:id="@+id/daysSundayButton"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="D"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@color/focusCustomInputHintColor"/>

                        <Button
                            android:id="@+id/daysMondayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="L"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>

                        <Button
                            android:id="@+id/daysTuesdayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="M"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>

                        <Button
                            android:id="@+id/daysWednesdayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="X"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>

                        <Button
                            android:id="@+id/daysThursdayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="J"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>

                        <Button
                            android:id="@+id/daysFridayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="V"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>

                        <Button
                            android:id="@+id/daysSaturdayButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="S"
                            android:padding="0dp"
                            android:autoSizeTextType="uniform"
                            android:backgroundTint="@android:color/transparent"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Boton para agregar aplicaciones (abrir DialogFragment) -->
        <Button
            android:id="@+id/addAppsButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="@color/focusCustomInputBg"
            android:padding="0dp"
            android:text="Añadir aplicaciones"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine2"
            app:layout_constraintEnd_toStartOf="@id/verticalGuideLine5"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine13"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine14"/>


        <!--Boton para crear la sesión de enfoque -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/focusCustomInputBg"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine1"
            app:layout_constraintEnd_toStartOf="@id/verticalGuideLineEnd"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine15"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuideLine16"/>

        <Button
            android:id="@+id/createModeButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/pibbleLogoWater"
            android:padding="0dp"
            android:text="Crear"
            app:layout_constraintStart_toStartOf="@id/verticalGuideLine2"
            app:layout_constraintEnd_toStartOf="@id/verticalGuideLine5"
            app:layout_constraintTop_toTopOf="@id/horizontalGuideLine17"
            app:layout_constraintBottom_toBottomOf="@id/horizontalGuideLineEnd"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="596dp" />


        <!-- ______________________Lineas verticales-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.060" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.255" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.305" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLine5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.741" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalGuideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.937" />


        <!-- ______________________Lineas horizontales-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.115" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.167"  />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.235" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.346" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.359" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.44" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.53"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.555"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.61"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.812"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLine17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.845"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGuideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>